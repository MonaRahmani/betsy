<% if product.errors.any? %>
  <ul class="errors">
    <% product.errors.each do |column, message| %>
      <li>
        <%= column %><%= message %>
      </li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: Review.new, url: product_reviews_path(product) do |f| %>
  <div>
    <%= f.select :rating, ["rating", 1, 2, 3, 4, 5] %>
  </div>
  <div>
    <%= f.label :Leave_a_review %>
    <%= f.text_area :review_content %>
  </div>
  <div>
    <%= f.label :name %>
    <%= f.text_area :name %>
  </div>
  <%= f.submit action_name, class:'button-style' %>
<% end %>