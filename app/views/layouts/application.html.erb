<!DOCTYPE html>
<html>
<head>
  <title>Betsy</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<nav>
  <ul>
    <li>
      <h1><%= link_to "DREAMsy", root_path, class: "dreamsy" %></h1>
    </li>
    <% if session[:user_id]%>
      <li>
        <%= link_to "Log out", logout_path, method: :delete, class: "nav-button" %>
      </li>
      <li class="navbar-item dropdown-toggle main-drop" type="button" data-toggle="dropdown">My Account<span class="caret"></span></li>
        <ul class="dropdown-menu">
          <li><%= link_to "Products", user_path(session[:user_id]) %></li>
          <li><%= link_to "Sales", user_dashboard_path(session[:user_id]) %></li>
        </ul>
    <% else %>
      <li>
        <%= link_to "Login", github_login_path, class: "nav-button" %>
      </li>
    <% end %>
  </ul>
  <ul>
    <li class="navbar-item dropdown-toggle main-drop" type="button" data-toggle="dropdown">Products<span class="caret"></span></li>
      <ul class="dropdown-menu">
        <%= link_to "View all", products_path %>
        <% Category.all.each do |category| %>
          <li><%= link_to category.category_name, category_products_path(category.id) %></li>
        <% end %>
      </ul>
      <ul>
        <li class="navbar-item dropdown-toggle main-drop" type="button" data-toggle="dropdown">Products<span class="caret"></span></li>
          <ul class="dropdown-menu">
            <%= link_to "View all", products_path %>
            <% Category.all.each do |category| %>
              <li><%= link_to category.category_name, category_products_path(category.id) %></li>
            <% end %>
          </ul>
        </li>
        <li class="navbar-item"><%= link_to "Merchants", users_path, class: "nav-link" %> </li>
        <li class="navbar-item"><%= link_to "Cart", cart_path, class: "nav-link" %> </li>
        <% if @current_merchant%>
          <li class="navbar-item"><%= link_to "NEW PRODUCT", new_product_path, class: "nav-link" %> </li>
          <li class="navbar-item"><%= link_to "LOGOUT", logout_path, method: :delete, class: "nav-link" %> </li>
        <%end %>
      </ul>
    </nav>
    <% if flash[:error] %>
      <div class="alert alert-warning alert-container">
        <%= flash[:error] %>
        <% if flash[:reasons] %>
          <ul>
            <% flash[:reasons].values.flatten.each do |value| %>
              <li><%= value %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    <% elsif flash[:success] %>
      <div class="alert alert-success alert-container">
        <%= flash[:success] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
