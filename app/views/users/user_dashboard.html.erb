<section class="orders-show__container">
  <h3 class="orders-show__header">Products</h3>
  <table class="table">
    <thead>
    <tr>
      <th>Order #</th>
      <th>Purchase Date</th>
      <th>Order Status</th>
    </tr>
    </thead>
    <tbody>
    <!--        <td><%#= link_to @order.id, order_path(@order.id), class: 'table-link' %></td>-->
    <% @user.order_items.each do |item| %>
      <tr>
        <td><%= link_to item.id, order_path(item) %> </td>
        <td><%= item.completed_at %></td>
        <td><%= item.status %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>
<h3><%= link_to "Back to Top", user_dashboard_path, class: "btn btn-secondary" %></h3>