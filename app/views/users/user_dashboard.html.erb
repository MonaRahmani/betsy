<h1><%= @user.username %>'s Sale History </h1>
<br>

<h3><%= link_to "Back to Sales Account", user_path(session[:user_id]), class: "btn btn-secondary" %></h3>
<br>
<table class="table">
  <h3 class="orders-show__header">Order Summary</h3>
  <tr>
    <td></td>
    <th scope="col">Orders</th>
    <th scope="col">Revenue</th>
  </tr>
  <tr>
    <th scope="row">Pending</th>
    <td><%= @user.total_orders_by_status("pending")%></td>
    <td>$<%= @user.total_rev_filtered("pending") %></td>
  </tr>
  <tr>
    <th scope="row">Paid</th>
    <td><%= @user.total_orders_by_status("paid") %></td>
    <td>$<%= @user.total_rev_filtered("paid") %></td>
  </tr>
  <tr>
    <th scope="row">Complete</th>
    <td><%= @user.total_orders_by_status("complete") %></td>
    <td>$<%= @user.total_rev_filtered("complete") %></td>
  </tr>
  <tr>
    <th scope="row">Cancelled</th>
    <td><%= @user.total_orders_by_status("cancelled") %></td>
    <td>$<%= @user.total_rev_filtered("cancelled")%></td>
  </tr>
  <tr>
    <th scope="row">Total</th>
    <td><%= @user.total_rev_filtered(nil) %></td>
    <td>$<%= @user.total_orders_by_status(nil)%></td>
  </tr>
</table>

