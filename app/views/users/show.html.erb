<body>
<h2><%= @user.username%>'s SALES ACCOUNT </h2>
<div class="user-account-page">
  <p>Member since <%= @user.created_at.strftime("%Y-%m-%d") %></p>
  <div class="user-account-links">
    <h3><%= link_to "Sale History", user_dashboard_path, class: "btn btn-secondary" %></h3>
    <h3><%= link_to "Add Product", new_product_path, class: "btn btn-secondary" %></h3>
    <h3><%= link_to "Add Category", new_category_path, class: "btn btn-secondary" %></h3>
  </div>
</div>
<section class="user-votes__container">
  <div class="inventory-table">
  <h3 class="user-votes__header">INVENTORY</h3>
  <table class="table">
   <thead>
    <tr class="column-heading">
      <th>NAME</th>
      <th>STOCK</th>
      <th>PRICE</th>
      <th>STATUS</th>
    </tr>
   </thead>
  <tbody>
  <% @user.sorted_products.each do |product| %>
    <tr class="table-items">
      <td><%= link_to product.name, edit_product_path(product.id), class:"table-item-name"%></td>
      <td><%= product.stock %></td>
      <td><%= number_to_currency(product.price) %></td>
        <% if product.retired %>
          <td>retired</td>
          <% else %>
          <td>active</td>
        <% end %>
    </tr>
  <% end %>
  </tbody>
  </table>
  </div>
</section>
<h3><%= link_to "Back to Top", user_path(session[:user_id]), class: "btn btn-secondary" %></h3>
<hr>
</body>

