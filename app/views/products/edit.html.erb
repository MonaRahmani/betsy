<body>
<h1>Update <%= @product.name %></h1>
<%= render partial: 'form', locals: { action_name: 'Update Product'} %>

  <% if @product.errors.any? %>
    <ul>
      <%= @product.errors.each do |column, message| %>
        <li>
          <%= column %> <%= message %>
        </li>
        <% end %>
    </ul>
  <% end %>
  <div class="delete-button">
<%= button_to "Delete", product_path(@product), method: :delete, :class => "btn btn-danger", data: {
    confirm: "Are you sure you want to delete this product?"} %>
  </div>
</body>
