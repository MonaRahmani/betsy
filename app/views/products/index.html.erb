<ul>
  <%if @category %>
    <h1>Products by category: <%= @category.category_name %></h1>
  <% else %>
    <h1>Products</h1>
  <% end %>

  <% if @products.length > 0 %>
    <% @products.each do |product| %>
      <li><%= link_to product.name, product_path(product.id)  %></li>
      <li><%= number_to_currency(product.price) %></li>
    <% end %>
  <% else %>
    No products.
  <% end %>
</ul>

