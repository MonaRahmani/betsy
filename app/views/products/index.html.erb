<h1>Products</h1>
<ul>
  <% if @products.length > 0 %>
    <% @products.each do |product| %>
      <li><%= link_to product.name, product_path(product.id)  %></li>
      <li><%= number_to_currency(product.price) %></li>
    <% end %>
  <% else %>
    No products.
  <% end %>
</ul>

<%= link_to "Create New Product", new_product_path %>