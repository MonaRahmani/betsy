<body>
<section class="orders-show__container">
  <h3 class="orders-show__header">YOUR CART</h3>
  <div class="cart-grid">
    <% @order.order_items.each do |item| %>
      <div class="cart-grid-details">
        <div>
        <%= image_tag( Product.find(item.product_id).photo_url, :size => '300x350') %>
        PRODUCT: <%= Product.find(item.product_id).name %> <br>
        QUANTITY: <%= item.quantity %> <br>
        PRICE: <%= number_to_currency(Product.find(item.product_id).price) %> <br>
        ITEM TOTAL: <%= number_to_currency(Product.find(item.product_id).price * item.quantity) %>
        </div>
        <div class="edit-cart">
          <%= link_to "UPDATE", cart_item_path(item.product_id), class:"nav-link" %>
          <%= link_to "REMOVE", product_order_items_path(item.product_id, item.id), method: :delete, data: {confirm: "Are you sure you want to remove #{item.product.name} item from cart?"}, class:"nav-link"%>
        </div>
      </div>
      <hr>
    <% end %>
  </div>
  <div class="cart-checkout">
    TOTAL: <%=number_to_currency(@order.total, class:"cart-checkout") %>
    <%= link_to "CHECKOUT", edit_order_path(@order), class:"btn btn-primary"%>
  </div>
  </section>
</body>