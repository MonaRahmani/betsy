<body>
  <h2 class="new-order-header">CHECKOUT</h2>
  <div class="order-form-grid">
    <%= form_with model: @order do |f| %>
      <br>
      <h5>Contact information</h5>
      <br>
      <div class="order-form-details">
        <%= f.label "email:" %>
        <%= f.text_field :email %>
      <br>
      <h5>Shipping address</h5>
      <br>
        <%= f.label "street_address:" %>
        <%= f.text_field :street_address%>

        <%= f.label "city:" %>
        <%= f.text_field :city%>

        <%= f.label "state:" %>
        <%= f.text_field :state%>

        <%= f.label "zip_code:" %>
        <%= f.text_field :zip_code%>

      <br>
      <h5>Payment</h5>
      <br>
        <%= f.label :credit_card_num, "Card number" %>
        <%= f.text_field :credit_card_num %>

        <%= f.label :credit_card_name, "Name on card" %>
        <%= f.text_field :credit_card_name %>

        <%= f.label :cc_exp_month, "Month" %>
        <%= f.select :cc_exp_month, (1..12).to_a %>

        <%= f.label :cc_exp_year, "Year" %>
        <%= f.select :cc_exp_year, (2020..2025).to_a %>

        <%= f.label :cvv, "Security code" %>
        <%= f.text_field :cvv_num %>
      </div>
      <div class="cart-checkout">
      <%= link_to "Return to cart", cart_path, class:"nav-link" %>
      <%= f.submit "Submit Order", class: "btn btn-primary"%>
      </div>
    <%end%>
  </div>
</body>