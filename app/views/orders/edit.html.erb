<h2 class="new-order-header">CHECKOUT</h2>
<div class="form">
  <%= form_with model: @order do |f| %>
    <br>
    <h5>Contact information</h5>
    <br>
    <div class="form-group">
      <%= f.label "email:" %>
      <%= f.text_field :email, :required => true %>
    </div>
    <br>
    <h5>Shipping address</h5>
    <br>
    <div class="form-group">
      <%= f.label "street_address:" %>
      <%= f.text_field :street_address, :required => true %>
    </div>
    <div class="form-group">
      <%= f.label "city:" %>
      <%= f.text_field :city, :required => true %>
    </div>
    <div class="form-group">
      <%= f.label "state:" %>
      <%= f.text_field :state, :required => true %>
    </div>
    <div class="form-group">
      <%= f.label "zip_code:" %>
      <%= f.text_field :zip_code, :required => true %>
    </div>
    <br>
    <h5>Payment</h5>
    <br>
    <div class="form-group">
      <%= f.label :credit_card_num, "Card number" %>
      <%= f.text_field :credit_card_num, :required => true %>
    </div>
    <div class="form-group">
      <%= f.label :credit_card_name, "Name on card" %>
      <%= f.text_field :credit_card_name, :required => true %>
    </div>
    <div class="form-group">
      <%= f.label :cc_exp_month, "Month" %>
      <%= f.select :cc_exp_month, (1..12).to_a, :required => true %>
    </div>
    <div class="form-group">
      <%= f.label :cc_exp_year, "Year" %>
      <%= f.select :cc_exp_year, (2020..2025).to_a, :required => true %>
    </div>
    <div class="form-group">
      <%= f.label :cvv, "Security code" %>
      <%= f.text_field :cvv_num, :required => true %>
    </div>

<%= link_to "Return to cart", cart_path %>

    <%= f.submit "Submit Order", class: "btn btn-primary"%>
  <%end%>
</div>